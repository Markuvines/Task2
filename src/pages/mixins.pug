mixin emblem()
  img(src="./src/img/emblem.svg", alt="эмблема")
mixin text-field-default(placeholder)
  input(class="text-field-default" type="text" placeholder=placeholder)
mixin button-default(text)
  .button-default__text=text
mixin button-else (text)
  .button-else__body
    .button-else__text= text
mixin big-button-arrow(text)
  .big-button-arrow__arrow
    img(src="./src/img/arrow_forward-white.svg", alt="стрелка")
  .big-button-arrow__text=text
mixin minus-button()
  img(src="./src/img/minus.svg")
mixin plus-button()
  img(src="./src/img/plus.svg")
mixin dropdown-room()
  .dropdown-room__dropdown-field
    .dropdown-room__arrow
      img(src="./src/img/expand_more.svg", alt="стрелка")
    input(class="text-field-default dropdown-room__text-field-default" type="text" value ="Особенности номера" disabled )
  .dropdown-room__dropdown-body
    ul.dropdown-room__list
      li.dropdown-room__item.bedrooms
          .dropdown-room__item-name спальни
          .dropdown-room__minus-button.minus-button
            +minus-button()
          .dropdown-room__count 0
          .dropdown-room__plus-button.plus-button
            +plus-button()
      li.dropdown-room__item.beds
          .dropdown-room__item-name кровати
          .dropdown-room__minus-button.minus-button
            +minus-button()
          .dropdown-room__count 0
          .dropdown-room__plus-button.plus-button
            +plus-button()
      li.dropdown-room__item.baths
          .dropdown-room__item-name ванные комнаты
          .dropdown-room__minus-button.minus-button
            +minus-button()
          .dropdown-room__count 0
          .dropdown-room__plus-button.plus-button
            +plus-button()
mixin dropdown-guests(title)
  h3.dropdown-guests__title= title 
  .dropdown-guests__dropdown-field
    .dropdown-guests__arrow
      img(src="./src/img/expand_more.svg", alt="стрелка")
    input(class="text-field-default dropdown-guests__text-field-default" type="text" value ="Сколько гостей" disabled )
  .dropdown-guests__dropdown-body
    ul.dropdown-guests__list
      li.dropdown-guests__item
          .dropdown-guests__item-name взрослые
          .dropdown-guests__minus-button.minus-button
            +minus-button()
          .dropdown-guests__count(data-adults="adults") 0
          .dropdown-guests__plus-button.plus-button
            +plus-button()
      li.dropdown-guests__item
          .dropdown-guests__item-name дети
          .dropdown-guests__minus-button.minus-button
            +minus-button()
          .dropdown-guests__count(data-children="children") 0
          .dropdown-guests__plus-button.plus-button
            +plus-button()
      li.dropdown-guests__item
          .dropdown-guests__item-name младенцы
          .dropdown-guests__minus-button.minus-button
            +minus-button()
          .dropdown-guests__count(data-child="child") 0
          .dropdown-guests__plus-button.plus-button
            +plus-button()
    .dropdown-guests__reset-submit
      input(class="dropdown-guests__reset" type="reset", value="очистить")
      input(class="dropdown-guests__submit" type="button", value="применить")
mixin custom-checkbox(title)
  label(class="custom-checkbox")
    input(type="checkbox")
    .custom-checkbox_fake
    span.custom-checkbox__text=title
mixin rich-checkbox(title,discription)
  label(class="rich-checkbox")
    input(type="checkbox")
    .rich-checkbox_fake
    .rich-checkbox__wraper
      p.rich-checkbox__text=title
      p.rich-checkbox__discription=discription
mixin checkbox-list(...items)
  .checkbox-list__field
    span.checkbox-list__title expandable checkbox list
    .checkbox-list__arroy
      img(src="./src/img/expand_more.svg", alt="стрелка")
  .checkbox-list__body
    ul.checkbox-list__checkbox-menu
      each item in items
        li.checkbox-list__checkbox-item
          +custom-checkbox(item)
mixin custom-radio-button(title,group)
  label(class="custom-radio-button")
    input(type="radio" name=group)
    .custom-radio-button__fake
    span.custom-radio-button__text=title
mixin toggle()
  .toggle__body
    .toggle__circle
mixin toggle-item(text)
  .toggle.toggle-item__toggle
    +toggle
  p.toggle-item__text=text
mixin like-button(number)
  .like-button__body
  .like-button__like
    img(class="like-button__active" src="./src/img/favorite.svg", alt="лайк")
    img(class="like-button__disable" src="./src/img/favorite_border.svg" alt="лайк")
  .like-button__count=number
mixin star-rate()
  ul.star-rate__list
    -for (var i=1; i<=5; i++)
      li.star-rate__item
        .star-rate__star
          img(class="star-rate__back" src="./src/img/star_border.svg", alt="alt")
          img(class="star-rate__front" src="./src/img/star.svg", alt="alt")
mixin star-rate-fixed(number)
   ul.star-rate-fixed__list
    -for (var i=1; i<=number; i++)
      li.star-rate-fixed__item--active
        .star-rate-fixed__star
          img(class="star-rate-fixed__back" src="./src/img/star_border.svg", alt="alt")
          img(class="star-rate-fixed__front" src="./src/img/star.svg", alt="alt")
    -for (var i=++number; i<=5; i++)
      li.star-rate-fixed__item
        .star-rate-fixed__star
          img(class="star-rate-fixed__back" src="./src/img/star_border.svg", alt="alt")
          img(class="star-rate-fixed__front" src="./src/img/star.svg", alt="alt")
mixin bullet-list (text)
  h3.bullet-list__name=text
  ul.bullet-list__menu
    li.bullet-list__item Нельзя с питомцами
    li.bullet-list__item Без вечеринок и мероприятий
    li.bullet-list__item
      | Время прибытия — после 13:00,
      br
      | а выезд до 12:00
mixin date(name)
  h3.date__name= name
  .date__dropdown
    +text-field-default("ДД.ММ.ГГГГ")
    .date__dropdown-arrow
      img(src="./src/img/expand_more.svg", alt="стрелка")
mixin room-selection()
  .room-selection__wraper
    h1.room-selection__title Найдём номера под ваши пожелания
    .room-selection__dates
      .date.room-selection__date
        +date("прибытие")
      .date.room-selection__date
        +date("выезд")
    .dropdown-guests.room-selection__dropdown-guests
      +dropdown-guests('гости')
    button.big-button-arrow.room-selection__big-button-arrow
      +big-button-arrow("подобрать номер")
mixin login-data()
  +text-field-default("Email")
  +text-field-default("Пароль")
mixin registration()
  .registration-wraper
    h1.registration__title Регистрация аккаунта
    .text-field.registration__text-field
      +text-field-default("Имя")
    .text-field.registration__text-field
      +text-field-default("Фамилия")
    .registration__radio-buttons
      .registration__radio-button.radio-button
        +custom-radio-button("Мужчина", "пол")
      .registration__radio-button.radio-button
        +custom-radio-button("Женщина", "пол")
    h3.registration__name дата рождения
    .text-field.registration__text-field
      +text-field-default("ДД.ММ.ГГГГ")
    h3.registration__name данные для входа в сервис
    .login-data.registration__login-data
      +login-data()
    .toggle-item.registration__toggle-item
      +toggle-item("Получать спецпредложения")
    button.big-button-arrow.registration__big-button-arrow
      +big-button-arrow("перейти к оплате")
    .registration__have-account
      span Уже есть аккаунт на Toxin
      button.button-else.registration__button-else
        +button-else("войти")
mixin reservation()
  .reservation-wraper
    .reservation__header
      span.reservation__number №
      span.reservation__room 888
      span.reservation__lux люкс
      span.reservation__price 9 990₽
      span.reservation__per-day в сутки
    .reservation__dates
      .date.reservation__date
        +date("прибытие")
      .date.reservation__date
        +date("выезд")
    .dropdown-guests.reservation__dropdown-guests
      +dropdown-guests('гости')
    .reservation__calculation
      span 9 990₽ х 4 суток
      span 39 960₽
    .reservation__discount
      .reservation__text-tip
        span Сбор за услуги: скидка 2 179₽
        .reservation__tip
          img(src="./src/img/tip.svg", alt="инфо")
      span 0₽
    .reservation__additions
      .reservation__text-tip
        span Сбор за дополнительные услуги
        .reservation__tip
          img(src="./src/img/tip.svg", alt="инфо")
      span 300₽
    .reservation__summary
      span Итого
      .reservation__line
      span 38 081₽
    button.big-button-arrow.reservation__big-button-arrow
      +big-button-arrow("забронировать")
mixin login()
  h1.login__title Войти
  .login-data.login__login-data
    +login-data()
  button.big-button-arrow.login__big-button-arrow
    +big-button-arrow("войти")
  .login__no-account
    span Нет аккаунта на Toxin?
    button.button-else.login__button-else
      +button-else("создать")
mixin room-card-lux(room, price, rate, comments)
  .room-card-lux__slider
    div
      img(src=`src/img/${room}/room1.png`, alt="alt")
    div
      img(src=`src/img/${room}/room2.png`, alt="alt")
    div
      img(src=`src/img/${room}/room3.png`, alt="alt")
    div
      img(src=`src/img/${room}/room4.png`, alt="alt")
  .room-card-lux__body
    .room-card-lux__header
      span.number №
      span.room=room
      span.lux люкс
      span.price=`${price}₽`
      span.per-day в сутки
    .room-card-lux__line
    .room-card-lux__rate-comments
      .star-rate-fixed.room-card-lux__star-rate-fixed(data-count=comments)
        +star-rate-fixed(rate)
      .room-card-lux__comments
        span=comments
        span Отзывов
