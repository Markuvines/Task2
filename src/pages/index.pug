<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet", href="reset.css")
    link(rel="stylesheet", href="app.css")
    link(rel="stylesheet", href="fonts.css")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Form-Elements
  body 
    .formElements
      .emblem
        include ../blocks/emblem/emblem
      .container
        .colomn1
          .text-field-default-container
            p.name text field
            p.condition default
            include ../blocks/Form-Elements/text-field-default/text-field-default
          .text-field-hover-focus-container
            p.name Text Field
            p.condition Hover / Focus
            include ../blocks/Form-Elements/text-field-default/text-field-default
          .dropdown
            p.name Dropdown
            p.condition Default
            input(class="dropdown__field text-field-default" type="text" value="Сколько гостей" disabled)
            .dropdown__arrow
              img(src="./src/img/expand_more.svg", alt="стрелка")
          .masked-text-field-container
            p.name masked text field
            p.condition Default
            include ../blocks//Form-Elements/masked-text-field/masked-text-field
        .colomn2
        .colomn3
        .comment

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    script(src="../Form-Elements.js")