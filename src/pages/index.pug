<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet", href="reset.css")
    link(rel="stylesheet", href="app.css")
    link(rel="stylesheet", href="fonts.css")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Form-Elements
  body 
    include ./mixins
    .formElements
      .emblem
        include ../blocks/emblem/emblem
      .container
        .colomn1
          .text-field-default-container
            p.name text field
            p.condition default
            include ../blocks/Form-Elements/text-field-default/text-field-default
          .text-field-hover-focus-container
            p.name Text Field
            p.condition Hover / Focus
            include ../blocks/Form-Elements/text-field-default/text-field-default
          .dropdown
            p.name Dropdown
            p.condition Default
            input(class="dropdown__field text-field-default" type="text" value="Сколько гостей" disabled)
            .dropdown__arrow
              img(src="./src/img/expand_more.svg", alt="стрелка")
          .masked-text-field-container
            p.name masked text field
            p.condition Default
            include ../blocks//Form-Elements/masked-text-field/masked-text-field
          .date-dropdown-container
            .placeholder
              p.name date Dropdown
              input(class="date-dropdown text-field-default" type="text" value="ДД.ММ.ГГГГ")
              .dropdown__arrow
                img(src="./src/img/expand_more.svg", alt="стрелка")
            .actual
              p.name date Dropdown
              input(class="date-dropdown text-field-default" type="text" value="19.08.2019")
              .dropdown__arrow
                img(src="./src/img/expand_more.svg", alt="стрелка")
          .filter-date-dropdown-container
            p.name filter date dropdown
            input(class="text-field-default filter-date-dropdown" type="text" value="19 авг - 23 авг")
            .dropdown__arrow
              img(src="./src/img/expand_more.svg", alt="стрелка")
          .subscription-text-field-container
            p.name subscription text field
            .subscription-text-field
              include ../blocks/Form-Elements/subscription-text-field/subscription-text-field
          .dropdown-room-container-default
            p.name dropdown
            p.condition Default
            input(class="text-field-default dropdown-default" type="text" value="2 спальни, 2 кровати..." disabled)
            .arrow
              img(src="./src/img/expand_more.svg", alt="стрелка")
          .dropdown-room-container-expanded
            p.name dropdown
            p.condition expanded
            form.dropdown-room
              include ../blocks/Form-Elements/dropdown-room/dropdown-room
          .checkbox-list-default-container
            +checkbox-list()
          .checkbox-list-expanded-container
            +checkbox-list("Завтрак","Письменный стол","Стул для кормления","Кроватка", "Телевизор","Шампунь")
          .features-container
            .comfort
              .img-wrap 
                img(src="./src/img/insert_emoticon.svg", alt="улыбка")
              p.text Комфорт Шумопоглощающие стены
            .line
            .windows
              .img-wrap 
                img(src="./src/img/location_city.svg", alt="дом")
              p.text Удобство <br>Окно в каждой из спален
            .line
        .colomn2
          .checkbox-buttons-container
            h3.name Checkbox Buttons
            ul.checkbox-buttons-list
              li 
                +custom-checkbox("Можно курить")
              li
                +custom-checkbox("Можно с питомцами")
              li
                +custom-checkbox("Можно пригласить гостей (до 10 человек)")
          .radio-buttons-container
            h3.name Radio Buttons
            .radio-buttons
              +custom-radio-button("Мужчина", "пол")
              +custom-radio-button("Женщина", "пол")
          .toggle-container
            h3.name Toggle
            .toggles
              .toggle-item
                +toggle-item("Получать спецпредложения")
              .toggle-item
                +toggle-item("Получать спецпредложения")
          .like-buttos-container
            h3.name like button
            .like-buttons
              .like-button(data-status="disabled")
                +like-button(2)
              .like-button(data-status="disabled")
                +like-button(11)
        .colomn3
        .comment

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    script(src="../Form-Elements.js")