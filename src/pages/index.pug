<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet", href="reset.css")
    link(rel="stylesheet", href="app.css")
    link(rel="stylesheet", href="fonts.css")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Headers-Footers
  body 
    mixin button-else(text)
      .button-else__body
        .button-else__text=text
    mixin button-default(text)
      .button-default__text=text
    mixin menu-item(elementname, dropdown=false, active=false)
      if (dropdown==true)
        if (active==true)
          a(href="#")
            li(class="menu-list__item "+"menu-list__item--active")= elementname
              img(src="./src/img/expand_more.svg")
        else
          a(href="#")
            li(class="menu-list__item")= elementname
              .menu-list__dropdown-img
                img(src="./src/img/expand_more.svg")
      else
        if (active==true)
          a(href="#")
            li(class="menu-list__item "+"menu-list__item--active")= elementname
        else
          a(href="#")
            li(class="menu-list__item")= elementname
    .headers-and-footers
      include ../blocks/headers-and-footers/headers-and-footers